<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--
        Paralloid wasnt working well with a marginTop on the first element
        This simulates the marginTop needed to show the art image
     -->
    <FrameLayout
        android:id="@+id/flHeaderOverlay"
        android:layout_width="match_parent"
        android:layout_height="220dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/le_black_more_transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvAuthorAndDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="asdfasdf"
                android:textColor="@color/le_white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivLikesCount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:alpha="0.6"
                android:src="@drawable/ic_full_heart" />

            <TextView
                android:id="@+id/tvLikesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:text="200K"
                android:textColor="@color/le_white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/le_background"
        android:orientation="vertical"
        android:padding="@dimen/widget_gap">

        <TextView
            android:id="@+id/tvDescriptionHeader"
            style="@style/LE.ProfileTitle"
            android:text="@string/artwork_description_header" />

        <TextView
            android:id="@+id/tvDescription"
            style="@style/LE.ProfileBody"
            android:text="text" />

    </LinearLayout>
</LinearLayout>