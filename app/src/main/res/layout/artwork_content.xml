<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--
        Paralloid wasnt working well with a marginTop on the first element
        This simulates the marginTop needed to show the art image
     -->
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/flHeaderOverlay"
        android:layout_height="180dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/le_transparent_black"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:text="asdfasdf"
                android:layout_marginLeft="20dp"
                android:id="@+id/tvAuthorAndDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/le_white"/>

            <ImageView
                android:id="@+id/ivLikesCount"
                android:alpha="0.6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_full_heart"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200K"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/le_white"
                android:id="@+id/tvLikesCount" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/widget_gap"
        android:layout_marginBottom="20dp"
        android:background="@color/le_background">

        <TextView
            android:id="@+id/tvDescriptionHeader"
            android:text="@string/artwork_description_header"
            style="@style/LE.ProfileTitle"/>

        <TextView
            android:id="@+id/tvDescription"
            android:text="text"
            style="@style/LE.ProfileBody"/>

    </LinearLayout>
</LinearLayout>