<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/flGalleryImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter">

                <ImageView
                    android:id="@+id/ivGalleryDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_building" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:background="@drawable/le_frame_background"
                    android:orientation="vertical"
                    android:paddingLeft="5dp">

                    <LinearLayout
                        android:id="@+id/llGalleryDetailLocation"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/ivDetailLocation"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_location" />

                        <TextView
                            android:id="@+id/txDetailAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:paddingLeft="5dp"
                            android:singleLine="false"
                            android:text="Address Details"
                            android:textColor="@color/le_white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/ivGalleryType"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_building" />

                        <TextView
                            android:id="@+id/txDetailGalleryType"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:paddingLeft="5dp"
                            android:singleLine="false"
                            android:text="Painting, Art"
                            android:textColor="@color/le_white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/ivLanguage"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_language" />

                        <TextView
                            android:id="@+id/txLanguage"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:paddingLeft="5dp"
                            android:singleLine="false"
                            android:text="English, Spanish"
                            android:textColor="@color/le_white" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/llGalleryDetail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/flGalleryImage"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txHoursTitle"
                    style="@style/LE.ProfileTitle"
                    android:layout_marginBottom="5dp"
                    android:text="Hours" />

                <TextView
                    android:id="@+id/txHours"
                    style="@style/LE.ProfileBody"
                    android:maxLines="2"
                    android:text="text" />

                <TextView
                    android:id="@+id/txDetailedPriceTitle"
                    style="@style/LE.ProfileTitle"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="10dp"
                    android:text="Price" />

                <TextView
                    android:id="@+id/txDetailedPrice"
                    style="@style/LE.ProfileBody"
                    android:maxLines="3"
                    android:text="text" />

                <TextView
                    android:id="@+id/txFacilitiesTitle"
                    style="@style/LE.ProfileTitle"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="10dp"
                    android:text="Facilities" />

                <LinearLayout
                    android:id="@+id/llFacilitiesImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

                <!--<TextView-->
                <!--android:id="@+id/txFacilities"-->
                <!--android:text="text"-->
                <!--android:maxLines="2"-->
                <!--style="@style/LE.ProfileBody" />-->

                <TextView
                    android:id="@+id/txDescriptionTitle"
                    style="@style/LE.ProfileTitle"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="10dp"
                    android:text="Description" />

                <TextView
                    android:id="@+id/txDescription"
                    style="@style/LE.ProfileBody"
                    android:singleLine="false"
                    android:text="text" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
