<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

  <include layout="@layout/toolbar"/>

  <FrameLayout
      android:id="@+id/flGalleryListView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/toolbar"
      tools:context="com.leexplorer.app.activities.GalleryListActivity"
      tools:ignore="MergeRootFrame"/>

  <FrameLayout android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/mainLoadingIndicator"
      android:visibility="gone"
      android:layout_below="@+id/toolbar">

    <include layout="@layout/progress_indicator"
        android:layout_width="@dimen/progress_indicator_large"
        android:layout_height="@dimen/progress_indicator_large"
        android:layout_gravity="center"
        />

  </FrameLayout>


</RelativeLayout>

