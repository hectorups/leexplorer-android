<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


  <!-- BACKGROUND -->

  <com.etsy.android.grid.util.DynamicHeightImageView
      android:id="@+id/ivArtworkThumb"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"/>

  <!-- SIGNAL INDICATOR -->

  <FrameLayout
      android:id="@+id/flSignalIndicator"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="right|top"
      android:layout_margin="5dp">

    <TextView
        android:id="@+id/tvSignalIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/far_rounded_rectangle"
        android:padding="4dp"
        android:text="close"
        android:textColor="@color/le_white"/>

  </FrameLayout>

  <!-- ARTWORK INFO -->

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_gravity="bottom"
      android:background="@color/le_black_more_transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:orientation="vertical">

      <TextView
          android:id="@+id/tvName"
          style="@style/LE.ListText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:textSize="16sp"
          android:textStyle="bold"/>

      <LinearLayout android:layout_width="match_parent"
          android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/le_white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/le_white"
            android:textSize="15sp"/>

      </LinearLayout>


    </LinearLayout>


  </FrameLayout>

</FrameLayout>