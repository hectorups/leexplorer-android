<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="@color/le_background"
    android:orientation="vertical"
    android:padding="@dimen/widget_gap">

  <TextView
      android:id="@+id/tvDescriptionHeader"
      style="@style/LE.ProfileTitle"
      android:text="@string/artwork_description_header"/>

  <TextView
      android:id="@+id/tvDescription"
      style="@style/LE.ProfileBody"
      android:text="text"/>

</LinearLayout>