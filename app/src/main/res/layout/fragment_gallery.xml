<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leexplorer.app.activities.GalleryActivity$PlaceholderFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/ivGalleryDetail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/llGalleryDetail"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/ivGalleryDetail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/txHoursTitle"
            android:text="Hours"
            style="@style/LE.ProfileTitle"/>

        <TextView
            android:id="@+id/txHours"
            android:text="text"
            android:maxLines="2"
            style="@style/LE.ProfileBody"/>

        <TextView
            android:id="@+id/txPriceTitle"
            android:text="Price"
            style="@style/LE.ProfileTitle"/>

        <TextView
            android:id="@+id/txPrice"
            android:text="text"
            android:maxLines="3"
            style="@style/LE.ProfileBody"/>

        <TextView
            android:id="@+id/txFacilitiesTitle"
            android:text="Facilities"
            style="@style/LE.ProfileTitle"/>


        <TextView
            android:id="@+id/txFacilities"
            android:text="text"
            android:maxLines="2"
            style="@style/LE.ProfileBody"/>


    </LinearLayout>


</RelativeLayout>
