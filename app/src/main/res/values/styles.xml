<resources>

  <style name="LE"/>

  <!-- Text styles -->

  <style name="LE.TextStyle">
    <item name="android:textColor">@color/le_black</item>
  </style>

  <style name="LE.HeadlineText" parent="LE.TextStyle">
    <item name="android:textSize">24sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="LE.ProfileText.Normal" parent="LE.TextStyle">
    <item name="android:textColor">@color/le_dark_grey</item>
    <item name="android:textSize">17sp</item>
    <item name="android:textStyle">normal</item>
  </style>

  <style name="LE.ListText" parent="LE.TextStyle">
    <item name="android:textColor">@color/le_white</item>
  </style>

  <!-- Profile Styles -->

  <style name="LE.ProfileTitle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAppearance">@style/LE.HeadlineText</item>
    <item name="android:layout_marginBottom">10dp</item>
  </style>

  <style name="LE.ProfileBody">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAppearance">@style/LE.ProfileText.Normal</item>
    <item name="android:freezesText">true</item>
  </style>

  <style name="LE.InfoWindowTitle" parent="LE.InfoWindowTitle">
    <item name="android:layout_marginBottom">5dp</item>
  </style>

  <style name="LE.InfoWindowBody" parent="LE.ProfileBody"></style>

  <style name="LE.DownloadProgressBar">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="progress_text_size">16sp</item>
    <item name="progress_reached_bar_height">4dp</item>
    <item name="progress_unreached_bar_height">2dp</item>
    <item name="progress_text_color">@color/le_blue</item>
    <item name="progress_reached_color">@color/le_blue</item>
  </style>

  <style name="LE.GalleryProfileIcon">
    <item name="android:layout_height">@dimen/gallery_profile_icon_size</item>
    <item name="android:layout_width">@dimen/gallery_profile_icon_size</item>
    <item name="progress_text_size">16sp</item>
    <item name="android:layout_gravity">center_vertical</item>
  </style>

  <style name="LE.GalleryProfileIconLabel">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:maxLines">2</item>
    <item name="android:paddingLeft">5dp</item>
    <item name="android:singleLine">false</item>
    <item name="android:textColor">@color/le_white</item>
  </style>

  <!-- List -->

  <style name="LE.TitleShadowed">
    <item name="android:textAppearance">@style/LE.HeadlineText</item>
    <item name="android:textColor">@color/le_white</item>
    <item name="android:textSize">30sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:shadowColor">#000000</item>
    <item name="android:shadowDx">5</item>
    <item name="android:shadowDy">5</item>
    <item name="android:shadowRadius">5</item>
  </style>

  <style name="LE.ArtworkLabel">
    <item name="android:textColor">@color/le_white</item>
    <item name="android:textSize">24sp</item>
  <item name="android:textStyle">bold</item>
  </style>

  <!-- Crouton Message -->
  <style name="LE.CroutonText">
    <item name="android:textSize">19sp</item>
  </style>

  <!-- Rippleeffect -->
  <style name="LE.RippleView">
    <item name="rv_rippleDuration">@integer/ripple_duration</item>
    <item name="rv_color">@color/le_white</item>
    <item name="rv_centered">false</item>
  </style>

</resources>
