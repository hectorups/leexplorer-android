<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/le_background">

  <com.etsy.android.grid.StaggeredGridView
      android:id="@+id/sgvArtworks"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:column_count_landscape="3"
      app:column_count_portrait="2"
      app:item_margin="2dp"/>

  <com.melnykov.fab.FloatingActionButton
      android:id="@+id/btnAutoplay"
      android:visibility="gone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|right"
      android:layout_margin="16dp"
      android:src="@drawable/ic_autoplay_white"
      app:fab_colorRipple="@color/le_mid_blue"
      app:fab_colorNormal="@color/le_blue"
      app:fab_colorPressed="@color/le_emphasis_blue"/>

</FrameLayout>
